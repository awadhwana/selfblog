<h1 aign="center">Showing category</h1>
<div class="well col-xs-8 col-xs-offset-2">
    <%= "Name: #{@category.name}" %>   
    <div class="article-actions">
        <%= link_to "Edit this category","#", class: "btn btn-xs btn-primary" %> |
        <%= link_to "Delete this category","#", method: :delete,
        data: { confirm: "Are you sure you want to delete the article?"},
        class: "btn btn-xs btn-danger" %> |
        <%= link_to "View all categories", categories_url, class: "btn btn-xs btn-success" %>
    </div>
</div>